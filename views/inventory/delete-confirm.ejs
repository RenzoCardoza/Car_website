<!-- Heading content -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<!-- Message Block -->
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<form class="delete-form" id="deleteForm" action="/inv/delete" method="post">
    <h3>Confirm Deletion - The delete is PERMANENT.</h3>
    <fieldset id="modifyInventory">
        <label>
            <span class="vehicle-titles">Make</span>
            <input type="text" id="invMake" name="inv_make" required pattern="^.{3,}$" placeholder="3 characters minimum" value="<%= locals.inv_make %>" readonly>
        </label>
        <label>
            <span class="vehicle-titles">Model</span>
            <input type="text" id="invModel" name="inv_model" required pattern="^.{3,}$" placeholder="3 characters minimum" value="<%= locals.inv_model %>" readonly>
        </label>
        <label>
            <span class="vehicle-titles">Price</span>
            <input type="text" id="invPrice" name="inv_price" required placeholder="Integers or decimal using comma" value="<%= locals.inv_price %>" readonly>
        </label>
        <label>
            <span class="vehicle-titles">Year</span>
            <input type="text" id="invYear" name="inv_year" required pattern="^(202[0-4]|20[0-1][0-9]|200[0-9]|19[0-9]{2}|[1-9][0-9]{0,2})$" placeholder="4-digit year" value="<%= locals.inv_year %>" readonly>
        </label>
        <input type="submit" class="submitBtn" id="vehicleBtn" value="Delete Vehicle">
    </fieldset>
    <input type="hidden" name="inv_id"
        <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
    <% } %>>
</form>